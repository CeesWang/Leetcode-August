class Solution {
    public int longestPalindrome(String s) {
        int longest = 0;
        boolean hasOdd = false;
        int arr [] = new int [52];
        for (char c : s.toCharArray()) {
            if (c - 'a' >= 0 && c - 'a' <= 26) {
                arr[c - 'a']++;                
            }
            else {
                arr[c - 'A' + 26]++;
            }
        }
        for (int num : arr) {
            if (num != 0) {
                if (num % 2 == 0) longest += num;
                else {
                    hasOdd = true;
                    longest += (num - 1);
                }                 
            }                
        }

        return hasOdd ? longest + 1 : longest;
    }
}
